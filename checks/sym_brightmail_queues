brightmail_message_levels = { "deferredMessages" : (40, 100)}

def inventory_sym_brightmail_queues(info):
    inventory = []
    for line in info:
        inventory.append((line[0], "brightmail_message_levels"))
    return inventory


def check_sym_brightmail_queues(item, params, info):

    state = 0

    for line in info:
        if line[0] == item:
            Connections, dataRate, deferredMessages, \
            messageRate, queueSize, queuedMessages = line[1:]
            #for what in Connections, dataRate, deferredMessages, \
            #messageRate, queueSize, queuedMessages ():
            warn, crit = params.get("deferredMessages")
            val = int(deferredMessages)
            if   val >  crit:
                state = (max(state, 2))
            elif val >  warn:
                state = (max(state, 2))
            msg = "deferredMessages: %d" % val
            return (state, nagios_state_names[state] +" - " + msg)
            
            

    return (3, "UNKW - Check not implemented")


check_info["sym_brightmail_queues"] = {
     "check_function"           : check_sym_brightmail_queues,
     "inventory_function"       : inventory_sym_brightmail_queues,
     "service_description"      : "Queue %s",
     "has_perfdata"             : False,
     "snmp_scan_function"       : lambda oid: "el5_sms" in oid(".1.3.6.1.2.1.1.1.0").lower() and oid(".1.3.6.1.4.1.393.200.130.2.1.2.1"),
     "snmp_info"                : (".1.3.6.1.4.1.393.200.130.2", [ 
                                      "2.1.1.2", # InstanceDescr
                                      "2.1.1.3", # Connections
